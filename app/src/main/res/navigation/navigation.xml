<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/hitungFragment">

    <fragment
        android:id="@+id/hitungFragment"
        android:name="com.d3if3105.mobpro.Assesment01.ui.HitungFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_hitung">
        <action
            android:id="@+id/action_hitungFragment_to_rumusFragment"
            app:destination="@id/rumusFragment" />
        <action
            android:id="@+id/action_hitungFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />
        <action
            android:id="@+id/action_hitungFragment_to_historiFragment"
            app:destination="@id/historiFragment" />
    </fragment>
    <fragment
        android:id="@+id/rumusFragment"
        android:name="com.d3if3105.mobpro.Assesment01.ui.RumusFragment"
        android:label="RumusFragment"
        tools:layout="@layout/fragment_rumus"/>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.d3if3105.mobpro.Assesment01.ui.AboutFragment"
        android:label="@string/tentang_aplikasi"
        tools:layout="@layout/fragment_about"/>
    <fragment
        android:id="@+id/historiFragment"
        android:name="com.d3if3105.mobpro.Assesment01.ui.HistoriFragment"
        android:label="History"
        tools:layout="@layout/fragment_histori"/>
</navigation>